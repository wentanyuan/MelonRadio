<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/main_color"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/pending"
            android:layout_width="60dp"
            android:layout_height="20dp">


            <RelativeLayout
                android:id="@+id/pending_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/left_tab_selected"
                >

            </RelativeLayout>
            <TextView
                android:id="@+id/pending_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="待接收"
                android:textColor="@color/dark_text"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/processing"
            android:layout_width="60dp"
            android:layout_height="20dp">


            <RelativeLayout
                android:id="@+id/processing_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mid_tab_unselected"
                >

            </RelativeLayout>
            <TextView
                android:id="@+id/processing_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="进行中"
                android:textColor="@color/light_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/finished"
            android:layout_width="60dp"
            android:layout_height="20dp">


            <RelativeLayout
                android:id="@+id/finished_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/right_tab_unselected"
                >

            </RelativeLayout>
            <TextView
                android:id="@+id/finished_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/light_text"
                android:textSize="12sp" />
        </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray"
        />


</LinearLayout>
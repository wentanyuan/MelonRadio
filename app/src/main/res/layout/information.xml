<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/main_color"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/info_tab"
                android:layout_width="40dp"
                android:layout_height="20dp">

                <RelativeLayout
                    android:id="@+id/info_tab_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/left_tab_selected">

                </RelativeLayout>

                <TextView
                    android:id="@+id/info_tab_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="消息"
                    android:textColor="@color/dark_text"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/chat_tab"
                android:layout_width="40dp"
                android:layout_height="20dp">


                <RelativeLayout
                    android:id="@+id/chat_tab_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/right_tab_unselected">

                </RelativeLayout>

                <TextView
                    android:id="@+id/chat_tab_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="聊天"
                    android:textColor="@color/light_tab"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/add_dialog"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/add_icon" />

        <ImageView
            android:id="@+id/contact_list"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/contact_icon" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="35dp"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="330dp"
                    android:layout_height="30dp"
                    android:background="@drawable/white_border_round_rect">

                </RelativeLayout>
            </RelativeLayout>

            <EditText
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/search_icon" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">

        <ListView
            android:id="@+id/messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@null">


        </ListView>


        <ListView
            android:id="@+id/chat_rooms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@null"
            android:visibility="invisible">


        </ListView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/white"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/create_chat_room"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="100dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:src="@drawable/add_chat_room_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建聊天室"
                    android:textColor="@color/main_color" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/add_friend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:src="@drawable/new_friend_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加好友"
                    android:textColor="@color/main_color" />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
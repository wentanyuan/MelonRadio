<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">
    <!--
      <com.eoe.tampletfragment.view.TitleView
          android:id="@+id/title"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" />
     -->

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_color"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/dairy_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/base_information"
            android:textColor="@color/white"
            android:textSize="30sp"></TextView>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:layout_marginTop="30px"
        android:src="@color/low_dark_gray" />

    <RelativeLayout
        android:id="@+id/head_information"
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="134px"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textColor="@color/my_text_gray"
                android:textSize="34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/read_head_image"
                android:layout_width="132px"
                android:layout_height="92px"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/add_avator" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/scend_head_image"
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:src="@color/low_dark_gray" />

    <RelativeLayout
        android:id="@+id/name_information"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="134px"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/my_text_gray"
                android:textSize="34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张永德"
                android:textColor="@color/small_gray"
                android:textSize="28px" />
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/third_head_image"
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:src="@color/low_dark_gray" />

    <RelativeLayout
        android:id="@+id/phone_information"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="134px"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textColor="@color/my_text_gray"
                android:textSize="34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="156-2242-1123"
                android:textColor="@color/small_gray"
                android:textSize="28px" />
        </LinearLayout>


    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:src="@color/low_dark_gray" />

    <RelativeLayout
        android:id="@+id/truck_team"
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="134px"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车队"
                android:textColor="@color/my_text_gray"
                android:textSize="34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中远国际货运车队"
                android:textColor="@color/small_gray"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/truck_photo_image"
                android:layout_width="35px"
                android:layout_height="35px"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"/>

            <!--android:src="@drawable/team_icon"-->

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:src="@color/low_dark_gray" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:layout_marginTop="30px"
        android:src="@color/low_dark_gray" />

    <RelativeLayout
        android:id="@+id/plate_no"
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="134px"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号"
                android:textColor="@color/my_text_gray"
                android:textSize="34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="京AU55443"
                android:textColor="@color/small_gray"
                android:textSize="28px" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:src="@color/low_dark_gray" />

    <RelativeLayout
        android:id="@+id/brand_car"
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="155px"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌车系"
                android:textColor="@color/my_text_gray"
                android:textSize="34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解放G6L"
                android:textColor="@color/small_gray"
                android:textSize="28px" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:src="@color/low_dark_gray" />

    <RelativeLayout
        android:id="@+id/models"
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="155px"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车型"
                android:textColor="@color/my_text_gray"
                android:textSize="34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="箱式货车"
                android:textColor="@color/small_gray"
                android:textSize="28px" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.6px"
        android:src="@color/low_dark_gray" />

    <RelativeLayout
        android:id="@+id/truck_parameter"
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="155px"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆参数"
                android:textColor="@color/my_text_gray"
                android:textSize="34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13米  18吨  150升"
                android:textColor="@color/small_gray"
                android:textSize="28px" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
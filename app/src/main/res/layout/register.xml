<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/super_light_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_color"
        android:gravity="center_vertical" >

    	<RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical" >
        	<ImageView
	            android:id="@+id/button_back"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/back" />
        </RelativeLayout>
        
        <TextView
            android:id="@+id/register_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/label_register"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </RelativeLayout>

    <ImageView
                android:id="@+id/dtail_list_item_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:src="@color/low_dark_gray" /> 
    
    <LinearLayout
        android:id="@+id/first_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="horizontal" >

    
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight = "15dp"
        android:background="@color/white"
        android:orientation="horizontal" >          
        <TextView
            android:id="@+id/international_telephone_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telephone_code"
            android:textColor="@color/black"
            android:textSize="18dp" />
      </LinearLayout>
        
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal" > 
        <EditText
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit_height"
			android:inputType="phone"
            android:ems="11"
            android:maxLength="11"
            android:hint="@string/label_input_phone_number"
            android:textColor="@color/black"
            android:background="@null"
            android:textSize="22dp" >
        </EditText>
      </LinearLayout>
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >       
        <ImageView
                android:id="@+id/cut_off_line"
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:src="@color/low_dark_gray" /> 
      </LinearLayout>

     
     <LinearLayout
         android:id="@+id/second_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/white"
        android:orientation="horizontal" > 
    <LinearLayout
        android:id="@+id/container_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="horizontal" >
        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight = "15dp"
        android:background="@color/white"
        android:orientation="horizontal" >          
        <TextView
            android:id="@+id/validation_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/validation"
            android:textColor="@color/black"
            android:textSize="18dp" />
      </LinearLayout>

        <LinearLayout
            android:id="@+id/captcha_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <EditText
                android:id="@+id/captcha_code"
                android:layout_width="370dp"
                android:layout_height="60dp"
			    android:background="@null"
                android:ems="10"
                android:hint="@string/label_captcha_code"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_gain_captha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/gain_captcha_middle"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
			    android:background="@drawable/captcha_before_border_round_rect"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/button_gain_captcha"
                android:textColor="@color/white"
                android:singleLine ="true"
                android:textSize="22dp" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >       
        <ImageView
                android:id="@+id/cut_off_line_second"
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:src="@color/low_dark_gray" /> 
      </LinearLayout>

     <LinearLayout
        android:id="@+id/third_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="horizontal" >

    
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight = "15dp"
        android:background="@color/white"
        android:orientation="horizontal" >          
        <TextView
            android:id="@+id/password_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_password"
            android:textColor="@color/black"
            android:textSize="18dp" />
      </LinearLayout>
        
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal" > 
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit_height"
			android:inputType="textPassword"
            android:ems="10"
            android:maxLength="10"
            android:hint="@string/label_input_password"
            android:textColor="@color/black"
            android:background="@null"
            android:textSize="22dp" >
        </EditText>
      </LinearLayout>
    </LinearLayout>
    
    <ImageView
                android:id="@+id/dtail_list_item_top_line"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="1dp"
                android:src="@color/low_dark_gray" />  

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/super_light_gray"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
         />


    <RelativeLayout
        android:id="@+id/dark_cover_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View

            android:id="@+id/top_cover"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/transparent_cover_2" />

        <View

            android:id="@+id/left_cover"
            android:layout_width="30dp"
            android:layout_height="300dp"
            android:layout_marginTop="150dp"
            android:background="@color/transparent_cover_2" />

        <View
            android:id="@+id/right_cover"
            android:layout_width="30dp"
            android:layout_height="300dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="450dp"
            android:background="@color/transparent_cover_2" />

        <View
            android:id="@+id/bottom_cover"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_cover_2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/avatar_frame"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/empty_frame"
            android:clickable="true" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/transparent_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cancel_reshape"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cancel" />


        <LinearLayout
            android:id="@+id/confirm_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_alignParentTop="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
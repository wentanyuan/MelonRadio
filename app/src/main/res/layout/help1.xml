<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/super_light_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_color"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/help_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/help"
            android:textColor="@color/white"
            android:textSize="30sp" >
        </TextView>
    </RelativeLayout>


    <LinearLayout 
	        android:id="@+id/spacer1"
        	android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="5dp"
        	android:background="@color/super_light_gray"
        >
    </LinearLayout>
    <LinearLayout 
	        android:id="@+id/title1"
        	android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
        	android:background="@color/super_light_gray"
        >
			<ImageView
				android:id="@+id/clear_cache_left1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:src="@drawable/setting_button_left_part"
				/>
        
	    <TextView
	        android:id="@+id/title_text1"
	        android:gravity="center_vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/dark_gray"
	        android:text="1.如何找回密码？"
			android:background="@drawable/button_2_back" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/answer1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/super_light_gray"
         >
		<View
			android:id="@+id/spacer_left1"
			android:layout_width="20dp"
			android:layout_height="0dp"
			/>
    	<TextView
        android:id="@+id/answer_text1"
        android:textColor="@color/dark_gray"
        android:text="可在东瓜电台App“找回密码”页面申请找回，通过“手机短信验证”，即可重新设置密码。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	</LinearLayout>
	
    
    <LinearLayout 
	        android:id="@+id/spacer2"
        	android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="5dp"
        	android:background="@color/super_light_gray"
        >
    </LinearLayout>
    <LinearLayout 
	        android:id="@+id/title2"
        	android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
        	android:background="@color/super_light_gray"
        >
			<ImageView
				android:id="@+id/clear_cache_left2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:src="@drawable/setting_button_left_part"
				/>
        
	    <TextView
	        android:id="@+id/title_text2"
	        android:gravity="center_vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/dark_gray"
	        android:text="2.如何定制日报类型？"
			android:background="@drawable/button_2_back" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/answer2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/super_light_gray"
         >
		<View
			android:id="@+id/spacer_left2"
			android:layout_width="20dp"
			android:layout_height="0dp"
			/>
    	<TextView
        android:id="@+id/answer_text2"
        android:textColor="@color/dark_gray"
        android:text="用户在初次使用APP的时候可以选择日报类型。同样，可以在“个人中心”页点击“订阅账号”，打开“定制频道”页，选择自己喜欢的频道。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	</LinearLayout>
	
    
    <LinearLayout 
	        android:id="@+id/spacer3"
        	android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="5dp"
        	android:background="@color/super_light_gray"
        >
    </LinearLayout>
    <LinearLayout 
	        android:id="@+id/title3"
        	android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
        	android:background="@color/super_light_gray"
        >
			<ImageView
				android:id="@+id/clear_cache_left3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:src="@drawable/setting_button_left_part"
				/>
        
	    <TextView
	        android:id="@+id/title_text3"
	        android:gravity="center_vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/dark_gray"
	        android:text="3.如何收藏日报？"
			android:background="@drawable/button_2_back" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/answer3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/super_light_gray"
         >
		<View
			android:id="@+id/spacer_left3"
			android:layout_width="20dp"
			android:layout_height="0dp"
			/>
    	<TextView
        android:id="@+id/answer_text3"
        android:textColor="@color/dark_gray"
         android:text="对于自己喜欢的日报，可以打开“日报列表”，左划自己喜欢的日报，点击红色桃头，即可收藏。同时该日报将出现在“个人中心”里的“日报收藏列表”里，用户可以多次收听。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	</LinearLayout>
	
    
    
    <LinearLayout 
	        android:id="@+id/spacer4"
        	android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="5dp"
        	android:background="@color/super_light_gray"
        >
    </LinearLayout>
    <LinearLayout 
	        android:id="@+id/title4"
        	android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
        	android:background="@color/super_light_gray"
        >
			<ImageView
				android:id="@+id/clear_cache_left4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:src="@drawable/setting_button_left_part"
				/>
        
	    <TextView
	        android:id="@+id/title_text4"
	        android:gravity="center_vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="4.如何绑定车机？"
	        android:textColor="@color/dark_gray"
			android:background="@drawable/button_2_back" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/answer4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/super_light_gray"
         >
		<View
			android:id="@+id/spacer_left4"
			android:layout_width="20dp"
			android:layout_height="0dp"
			/>
    	<TextView
        android:id="@+id/answer_text4"
        android:textColor="@color/dark_gray"
        android:text="打开“历史提醒”，点击“绑定车机”，打开“硬件关联”，可以手动输入你的设备SN号进行绑定，也可以用二维码扫描进行绑定。" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/super_light_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/main_color"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="5px"
            android:paddingLeft="50px"
            android:paddingTop="5px"
            android:text="聊天室"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/cancel"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="26.5dp"
                android:layout_height="13.5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/invite"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:src="@drawable/add_icon" />

        </RelativeLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/super_light_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            >

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/hf_on" />

            </RelativeLayout>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="免提"
                android:textColor="@color/chat_room_green"
                android:textSize="11sp"
                android:gravity="center_horizontal"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_speaker_selected"
            android:orientation="vertical"
            android:layout_marginTop="3dp">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/speak_icon" />
            </RelativeLayout>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="点击关闭"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:gravity="center_horizontal"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="3dp">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/silent_off" />
            </RelativeLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="静音"
                android:textColor="@color/gray"
                android:textSize="11sp"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>